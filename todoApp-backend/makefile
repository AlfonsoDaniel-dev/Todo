CONTAINERNAME = todoAppDB
CONTAINERINTERNALPORT = 5432
CONTAINEREXTERNALPORT = 3001
DBNAME = todoApp
DBUSER = poncho
DBPASSWORD = todoPassword

DATABASE:
	docker run --name $(CONTAINERNAME) -e POSTGRES_USER=$(DBUSER) -e POSTGRES_PASSWORD=$(DBPASSWORD) -e POSTGRES_DB=$(DBNAME) -p $(CONTAINEREXTERNALPORT):$(CONTAINERINTERNALPORT) -d postgres:latest

START:
	docker start $(CONTAINERNAME)

STOP:
	docker stop $(CONTAINERNAME)

