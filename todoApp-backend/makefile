CONTAINERNAME = todoAppDB
CONTAINERINTERNALPORT = 5432
CONTAINEREXTERNALPORT = 3001
DBNAME = todoApp
DBUSER = poncho
DBPASSWORD = todoPassword

DATABASE:
	docker run --name $(CONTAINERNAME) -e POSTGRES_USER=$(DBUSER) -e POSTGRES_PASSWORD=$(DBPASSWORD) -e POSTGRES_DB=$(DBNAME) -p $(CONTAINEREXTERNALPORT):$(CONTAINERINTERNALPORT) -d postgres:latest

START:
	docker start $(CONTAINERNAME)

STOP:
	docker stop $(CONTAINERNAME)

DROP:
	docker rm $(CONTAINERNAME)

TESTCONTAINERNAME=testTodoAPPDB
TESTDBUSER=poncho
TESTDBPASSWORD=12345
TESTDBNAME=dbTest
TESTCONTAINEREXTERNALPORT=5432
TESTCONTAINERINTERNALPORT=3002


TESTDATABASE:
	docker run --name $(TESTCONTAINERNAME) -e POSTGRES_USER=$(TESTDBUSER) -e POSTGRES_PASSWORD=$(TESTDBPASSWORD) -e POSTGRES_DB=$(TESTDBNAME) -p $(TESTCONTAINEREXTERNALPORT):$(TESTCONTAINERINTERNALPORT) -d postgres:latest
